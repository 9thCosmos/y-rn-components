{
    "Display": "Quec React Native Panel",
    "compilerOptions": {
        "baseUrl": ".", // 用于解析非相对模块名称的基目录,例如你在TS代码中使用非相对路径，ts编辑器从该baseUrl开始查找
        "paths": {
            "@@/*": [
                ".dumi/tmp/*"
            ],
            "@quec/panel-base-ui": [
                "packages/base-ui/dist/"
            ],
        },
        "removeComments": true,
        "composite": true,
        "declaration": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": [
            "esnext",
            "dom"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitUseStrict": false,
        "noStrictGenericChecks": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ES6",
        "allowJs": true
    },
    "exclude": [
        "dumi-docs",
        "packages/*/src/**/__tests__",
        "packages/*/coverage/**",
        "packages/*/dist/**",
        "packages/*/*.config.js"
    ]
}